extends ../home/layout.pug

block title
	title #{title}

append css
	link(rel='stylesheet' href='/game/css/game2048.css')

append body
	.box
		.cell-4.cell-m6.cell-s12.card
			.box
				.title.center.cell-12 #{title}
	// 面板
	.box
		#header.cell-4.cell-m6.cell-s12.card
			.box
				#showScore.cell-8
					| 分数：
					span#score 0
				#restart.button.cell-4 重新开始
	// 游戏
	#game.box
		#div2048.cell-4.cell-m6.cell-s12
			#tile-0-0.tile
			#tile-0-1.tile
			#tile-0-2.tile
			#tile-0-3.tile
			#tile-1-0.tile
			#tile-1-1.tile
			#tile-1-2.tile
			#tile-1-3.tile
			#tile-2-0.tile
			#tile-2-1.tile
			#tile-2-2.tile
			#tile-2-3.tile
			#tile-3-0.tile
			#tile-3-1.tile
			#tile-3-2.tile
			#tile-3-3.tile

append js
	script(src='/game/js/game2048.js')
	script(src='/game/js/game2048Event.js')