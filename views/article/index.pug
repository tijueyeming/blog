extends ../home/layout.pug

append body
	if amount
		each article in articles
			.box
				.pointer.cell-4.cell-m6.cell-s12.card(onclick=`jump('/article/${article._id}')`)
					.box
						.big.bold.cell-12 #{article.title}
						hr.hr.cell-12
						.cell-8
						.small.right.cell-4 #{article.moment}
	else
		.box
			.cell-4.cell-m6.cell-s12.card
				.box
					.cell-12.red.center 暂无文章
	if number > 1
		.box
			.cell-4.cell-m6.cell-s12.card
				.box
					if page == 1
						.cell-3
					else
						.button2.cell-3(onclick=`jump('/article/index/${page-1}')`) 上一页
					.cell-1
					select.select.center.cell-4(title='page' onchange=`jump('/article/index/'+this.options[page.selectedIndex].value)`)
						- for (var i = 1; i < number + 1; i++)
							if i == page
								option(value = i selected = true) 第#{i}页
							else
								option(value = i) 第#{i}页
					.cell-1
					if page == number
						.cell-3
					else
						.button2.cell-3(onclick=`jump('/article/index/${page+1}')`) 下一页